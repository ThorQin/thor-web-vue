{
	"description": "Web site project powered by thor-web",
	"version": "1.0.0",
	"license": "MIT",
	"repository": {},
	"private": true,
	"main": "./dist/index.js",
	"scripts": {
		"build:server": "shx rm -rf dist/* && tsc -P tsconfig.json",
		"build:vue": "vite build --config ./vue/vite.config.ts",
		"build": "run-s build:*",
		"watch:server": "shx rm -rf dist/* && tsc --watch -P tsconfig.json",
		"watch:vue": "vite build --mode development --sourcemap  --watch --config ./vue/vite.config.ts",
		"watch": "run-p watch:*",
		"start": "cross-env NODE_ENV=production node .",
		"debug": "cross-env NODE_ENV=development nodemon -e js,sql --inspect .",
		"genkey": "node test/genKey.js"
	},
	"name": "thor-web-vue",
	"dependencies": {
		"@types/node": "^14.18.12",
		"axios": "^0.26.1",
		"mdue": "^0.1.4",
		"thor-tpl": "^1.1.8",
		"thor-validation": "^1.1.10",
		"thor-web": "^1.4.25",
		"vue": "^3.2.31"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"@vitejs/plugin-vue": "^2.2.4",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.4.1",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.0",
		"shx": "^0.3.4",
		"typescript": "^4.6.2",
		"vite": "^2.8.6",
		"vue-tsc": "^0.29.8"
	}
}
